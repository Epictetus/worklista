- title "Login"
%h2 Login to your Worklista.com account
.settings
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    #left-settings
      .entry
        .property
          Email or Username
        .field
          = f.text_field :email
      .entry
        .property
          Password
        .field
          = f.password_field :password
      .entry
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .forgot
          = render :partial => "devise/shared/links"
      .entry
        .field
          = f.submit "Sign in"

