= form_for(item, :url => "/users/#{user.id}/items/#{item.id}") do |f|
  .inline-edit
    %p
      Title
      = f.text_field :title, :size => 80
    %p{:style => 'font-size: 0.8em; color: grey'}
      = item.url
      %a{:href => item.url, :target => "_blank" } (open in other window)
    %p
      Tags
      = f.text_field :tag_names
    %p
      Date
      = f.date_select :published_at
    %p
      Description
      %br
      = f.text_area :summary, :cols => 60, :rows => 8
      %span{:style => 'font-size: 0.8em; color: grey'} 100
    %p= f.submit "Update"
    %p (Hit escape key if there is nothing to change)
