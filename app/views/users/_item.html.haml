.item{:id => "item_#{i.id}"}
  .head
    .title
      %a{:href => i.url, :target => "_blank" }
        = i.title
    .social
      .hatena
        %a{ :href => link_to_hatena(i.url), :target => "_blank" }
          = i.hatena.to_s + " users"
      .retweet
        - b = i.bitly_url ? i.bitly_url : ""
        %a{ :href => b + "+", :target => "_blank" }
          = i.retweet.to_s + "clicks"
    .date= i.published_at
  .body
    .tags
      - if !i.tags.empty?
        - i.tags.each do |tag|
          %a{:href => user_tag_path(:tag => tag.name)}
            = tag.name
    #edit-buttons
      - if user_signed_in? && current_user.id == user.id
        = button_to "Delete", user_item_path(user, i), :confirm => "Are you sure?", :method => :delete, :remote => :true
        = button_to "Edit", edit_user_item_path(user, i), :method => :get
        - if i.pick?
          = button_to "Unpick", user_item_path(user, i, :item => {:pick => false}), :method => :put
        - else
          = button_to "Pick", user_item_path(user, i, :item => {:pick => true}), :method => :put
