- title "Edit Item"
= form_for(@item, :url => user_item_path) do |f|
  %hr
  .item
    %h2 Edit this item:
    %p
      Title
      = f.text_field :title, :size => 80
    %p
      URL
      = f.text_field :url, :size => 80
    %p
      Tags
      = f.text_field :tag_names
    %p
      = f.date_select :published_at
    %p= f.submit "Update"

= link_to "Back", :back
